<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#000"
                android:dashWidth="8dp"
                android:dashGap="3dp" />
        </shape>
    </item>
    <!--设置只有底部有边框-->
    <item android:bottom="1dp">
        <shape>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>