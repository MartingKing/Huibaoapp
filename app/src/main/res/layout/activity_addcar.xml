<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlayoutTitle"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_car_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_margin="@dimen/dp_15"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/tv_add_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_car_plus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_add_car"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="添加行驶证正面照片" />

                <ImageView
                    android:id="@+id/myimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <View style="@style/divider_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌颜色"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@mipmap/ic_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="蓝牌"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="车牌号码"
                android:textColor="@color/color333"
                android:textSize="@dimen/sp_14" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et1"
                    style="@style/edit_1" />

                <EditText
                    android:id="@+id/et2"
                    style="@style/edit_1" />

                <TextView
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/banner_point_select" />

                <EditText
                    android:id="@+id/et3"
                    style="@style/edit_1" />

                <EditText
                    android:id="@+id/et4"
                    style="@style/edit_1" />

                <EditText
                    android:id="@+id/et5"
                    style="@style/edit_1" />

                <EditText
                    android:id="@+id/et6"
                    style="@style/edit_1" />

                <EditText
                    android:id="@+id/et7"
                    style="@style/edit_1" />

                <EditText
                    android:id="@+id/et8"
                    style="@style/edit_1"
                    android:background="@drawable/bg_xuxian_editxt"
                    android:hint="新"
                    android:textColorHint="@color/colorGreenCarBraLight" />
            </LinearLayout>

            <View style="@style/divider_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌车型"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_cartype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:hint="请输入车型"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_nessary"
                    android:text="车辆识别代码"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_idnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:hint="请输入车身架号"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发动机号码"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_fdjnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:hint="请输入发动机号"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_nessary"
                    android:text="所有人"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:hint="请输入所有人姓名"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_nessary"
                    android:text="注册日期"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_selecttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableLeft="@mipmap/ic_nessary"
                    android:drawableEnd="@mipmap/ic_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="end"
                    android:hint="2020-12-03"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆类型"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_selecttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@mipmap/ic_right"
                    android:gravity="end"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="请选择"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用性质"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_usetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@mipmap/ic_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="请选择"
                    android:gravity="end"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View style="@style/divider_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无感支付停车场"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/sp_14" />

                <Switch
                    android:id="@+id/tv_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </RelativeLayout>

            <View
                style="@style/divider_1"
                android:layout_height="@dimen/dp_80" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_38"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>