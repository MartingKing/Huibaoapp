<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_active_titlebar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="充值金额"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_18" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:overScrollMode="never"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/tv_amount_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/amout1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/selector_charge_color"
            android:button="@null"
            android:gravity="center"
            android:text="50元"
            android:textColor="@drawable/selector_detactor_text_color" />

        <RadioButton
            android:id="@+id/amout2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_charge_color"
            android:button="@null"
            android:gravity="center"
            android:text="100元"
            android:textColor="@drawable/selector_detactor_text_color" />

        <RadioButton
            android:id="@+id/amout3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/selector_charge_color"
            android:button="@null"
            android:gravity="center"
            android:text="200元"
            android:textColor="@drawable/selector_detactor_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_amount_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/amout4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@drawable/selector_charge_color"
            android:button="@null"
            android:gravity="center"
            android:text="300元"
            android:textColor="@drawable/selector_detactor_text_color" />

        <RadioButton
            android:id="@+id/amout5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_charge_color"
            android:button="@null"
            android:gravity="center"
            android:text="500元"
            android:textColor="@drawable/selector_detactor_text_color" />

        <RadioButton
            android:id="@+id/amout6"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/selector_charge_color"
            android:button="@null"
            android:gravity="center"
            android:text="1000元"
            android:textColor="@drawable/selector_detactor_text_color" />

    </LinearLayout>

    <EditText
        android:id="@+id/inputamount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/shape_et_charge"
        android:hint="自定义金额"
        android:inputType="number"
        android:paddingStart="@dimen/dp_10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="支付方式"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_18" />

    <RelativeLayout
        android:id="@+id/rlwexin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/ic_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toRightOf="@+id/image"
            android:text="微信"
            android:textColor="@color/color333" />


        <RadioButton
            android:id="@+id/radiowx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color333" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlzfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@mipmap/ic_zfb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toRightOf="@+id/image2"
            android:text="支付宝"
            android:textColor="@color/color333" />


        <RadioButton
            android:id="@+id/radiozfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/color333" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>