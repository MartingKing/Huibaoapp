<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_active_titlebar" />

    <RelativeLayout
        android:id="@+id/rlheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/rignticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@mipmap/ic_right" />

        <ImageView
            android:id="@+id/header"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rignticon"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_mycar" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_15" />


        <EditText
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@null"
            android:gravity="end"
            android:singleLine="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系电话"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/tvphpne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@null"
            android:gravity="end"
            android:singleLine="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/verifyid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_white"
        android:text="实名认证"
        android:textColor="@color/color999"
        android:textSize="@dimen/sp_16" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>