<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tab1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="低利息"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tab2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="大额贷"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tab3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="小额贷"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tab4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="闪电放款"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_tab5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="最新上线"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tab6"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="仅需芝麻分"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tab7"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="仅需身份证"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_tab8"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/selector_detactor_border_color"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:textColor="@drawable/selector_detactor_text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>
