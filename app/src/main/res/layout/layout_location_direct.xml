<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_fill_top_white_10"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAddres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="红旗大街"
                android:textColor="@color/color333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_addres_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_stants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableStart="@mipmap/ic_stants"
                android:drawablePadding="@dimen/dp_8"
                android:text="收费标准公示"
                android:textColor="@color/app_red"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            style="@style/divider_1"
            android:layout_below="@+id/top1"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/color999"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tips"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">

            <Button
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_gradient_light_white"
                android:text="分享停车场"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_gradient_light_blue"
                android:text="导航泊车"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_fill_light_blue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rest_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余泊位"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
