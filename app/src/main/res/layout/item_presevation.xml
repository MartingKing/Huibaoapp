<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@+id/radio"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvcarnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="黑A58M64"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_addres_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="中央公园停车场"
            android:textColor="@color/color999"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:text="预约时间"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.05.07 12:20:20"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_corner_gradient_light_white"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="@color/app_blues"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/direct"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_corner_gradient_light_blue"
                android:gravity="center"
                android:text="导航泊车"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>