<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:text="登陆"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_17"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:text="请输入登陆密码"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_17"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="6-16位密码"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/text_color_3"
        android:textColorHint="@color/text_color_4"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@color/color_9c9c9c" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_forgertpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:text="忘记密码" />

        <TextView
            android:id="@+id/tv_loginby_vfcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_38"
            android:text="使用验证码登录"
            android:textColor="@color/app_blues" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>