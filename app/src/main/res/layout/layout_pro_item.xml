<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_15"
    android:background="@drawable/bg_fill_white_6">

    <ImageView
        android:id="@+id/ivProductImg"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:contentDescription="@string/image_descripe" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/ivProductImg">

        <TextView
            android:id="@+id/ivProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="xxx"
            android:textColor="@color/text_color_2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ivProductInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/app_red"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ivProductInterest"
            android:text="利息:"
            android:textColor="@color/text_color_7"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvProductInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@+id/ivProductImg"
        android:textColor="@color/text_color_8"
        android:textSize="11sp" />

</RelativeLayout>
