<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clayoutBg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivProductImg"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/colorAccent"
        android:contentDescription="@string/image_descripe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="趣花分期"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/ivProductImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="最高额度:"
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/ivProductImg"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <TextView
        android:id="@+id/tv_top_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:lines="1"
        android:text="500000"
        android:textColor="@color/colorE00000"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_top_amount_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_top_amount_title"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:lines="1"
        android:text="首借零门槛，最快3分钟下款"
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/ivProductImg"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_amount" />

    <TextView
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/shape_corner1_gradient_red"
        android:gravity="center"
        android:text="@string/apply_now"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/container3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@color/colorDDDDDD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_describe" />

</android.support.constraint.ConstraintLayout>