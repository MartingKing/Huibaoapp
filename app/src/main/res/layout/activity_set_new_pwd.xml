<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_44"
            android:contentDescription="@string/image_descripe"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_28"
            android:paddingBottom="@dimen/dp_12"
            android:src="@mipmap/ic_back_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="重置密码"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_40"
        android:text="设置新密码"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_25"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/text_color_3"
        android:textColorHint="@color/text_color_4"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@color/color_9c9c9c" />

    <EditText
        android:id="@+id/et_pwd2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_38"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请再次输入新密码"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/text_color_3"
        android:textColorHint="@color/text_color_4"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@color/color_9c9c9c" />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>