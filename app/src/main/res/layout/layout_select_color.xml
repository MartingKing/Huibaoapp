<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_select_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popwindow_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RadioGroup
            android:id="@+id/rgColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝牌" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="绿牌" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="黄牌" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgUseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/yy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="营运机动车" />

            <RadioButton
                android:id="@+id/fyy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="非营运机动车" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgCarType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/cx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大型车" />

            <RadioButton
                android:id="@+id/cx2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中型车" />

            <RadioButton
                android:id="@+id/cx3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小型车" />

            <RadioButton
                android:id="@+id/cx4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微型车" />
        </RadioGroup>

        <Button
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_38"
            android:background="@drawable/shape_corner_gradient_light_blue"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</RelativeLayout>
