<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:contentDescription="@string/image_descripe"
        android:scaleType="fitXY"
        android:src="@mipmap/user_bg" />

    <View
        android:id="@+id/vStatusBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height" />

    <ImageView
        android:id="@+id/ivPortrait"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@+id/vStatusBar"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_43"
        android:contentDescription="@string/image_descripe"
        android:src="@mipmap/ic_portrait_d" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vStatusBar"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_61"
        android:layout_toEndOf="@+id/ivPortrait"
        android:layout_toRightOf="@+id/ivPortrait"
        android:text="@string/tips_login"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/llayoutNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPortrait"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@mipmap/shadow_bg_user"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llayoutHelpCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_18"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/kdj_user_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/help_center"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/ic_into" />

        </LinearLayout>

        <View style="@style/user_frag_divider" />

        <LinearLayout
            android:id="@+id/llayoutFeedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_18"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/kdj_user_feedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/feed_back"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/ic_into" />

        </LinearLayout>


        <View style="@style/user_frag_divider" />

        <LinearLayout
            android:id="@+id/llayoutPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_18"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/kdj_user_privacy_policy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/personal_principle"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/ic_into" />

        </LinearLayout>

        <View
            style="@style/user_frag_divider"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llayoutSetting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_18"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/kdj_user_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/setting"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:contentDescription="@string/image_descripe"
                android:src="@mipmap/ic_into" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>