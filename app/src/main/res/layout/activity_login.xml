<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:text="登陆"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_17"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_40"
        android:text="欢迎登陆汇泊通"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_17"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/input_mobile"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/text_color_3"
        android:textColorHint="@color/text_color_4"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@color/color_9c9c9c" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:visibility="visible">

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:contentDescription="@string/image_descripe"
            android:focusable="true"
            android:src="@mipmap/ic_close_eye" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:digits="@string/alphabet_and_number"
            android:hint="@string/input_pwd"
            android:inputType="number"
            android:maxLength="6"
            android:padding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_26"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_26"
            android:textColor="@color/text_color_3"
            android:textColorHint="@color/text_color_4"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@color/color_9c9c9c" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="@string/fast_loging"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_forgertpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:text="忘记密码"
            android:textColor="@color/color333" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_38"
            android:text="新用户注册"
            android:textColor="@color/color333" />
    </RelativeLayout>
</LinearLayout>