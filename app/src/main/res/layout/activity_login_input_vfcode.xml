<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_44"
            android:contentDescription="@string/image_descripe"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_28"
            android:paddingBottom="@dimen/dp_12"
            android:src="@mipmap/ic_back_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证码"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_40"
        android:text="验证手机号码"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_25"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:text="验证码已发送至手机:13112345678"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_15"
        android:visibility="visible" />

    <com.huiboapp.mvp.ui.widget.views.VerifyEditText
        android:id="@+id/verifycode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_38"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="6"
        android:paddingStart="@dimen/dp_20"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_resendcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:text="重发验证码"
        android:textColor="@color/app_blues"
        android:textSize="@dimen/sp_15"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/shape_corner_gradient_light_blue"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>